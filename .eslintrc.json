{
    "env": {
        "browser": true,
        "es2021": true,
        "node": true
    },
    "extends": "standard-with-typescript",
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module"
    },
    "rules": {
        "semi": "off",
        "@typescript-eslint/semi": ["error", "always"],
        "quotes": ["error", "single"],
        "@typescript-eslint/no-misused-promises": ["error", {"checksVoidReturn": false}]
    }
}
