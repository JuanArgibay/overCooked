{
  "env": {
    "es2021": true,
    "node": true
  },
  "extends": "standard-with-typescript",
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module",
    "project": "./tsconfig.json"
  },
  "rules": {
    "quotes": ["error", "double"],
    "semi": ["error", "always"],
    "@typescript-eslint/semi": "off",
    "@typescript-eslint/quotes": "off"
  }
}
